*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

* {
  margin: 0;
  padding: 0;
  font-family: "Poppins", sans-serif;
}

:root {
  --main: #04245f;
  --main-dark-1: #031d4c;
  --accent: #5f3e04;
  --white: #f9f8ff;
  --black: #030712;
  --main-lightest: #b0cbfc;
}

html {
  box-sizing: border-box;
  font-size: 62.5%;
}

body {
  font-family: "Poppins", sans-serif;
  font-weight: 400;
  line-height: 1.6;
  color: var(--white);
  min-height: 100vh;
}

.container {
  max-width: 120rem;
  margin: 0 auto;
  margin-top: 3rem;
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  grid-gap: 3rem;
}

/* -------------------------------------------Navigation-------------------------------------*/

.navigation {
  background-color: var(--main);
  padding: 0 0 0 6rem;
  grid-column: 1 / -1;
  letter-spacing: 2px;
}

.navigation__list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  list-style: none;
}

.navigation__item {
}

.navigation__item a {
  font-size: 2rem;
}

.navigation__link:link,
.navigation__link:visited {
  color: var(--white);
  text-decoration: none;
  text-transform: uppercase;
}

.navigation__social {
  max-height: 100%;
  align-self: stretch;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 2rem;
  align-items: center;
  background-color: var(--accent);
  padding: 0 3rem;
}

.navigation__social img {
  height: 3rem;
  width: auto;
  display: block;
}

.logo img {
  height: 5rem;
  width: auto;
  transform: scale(2.3);
}

/* -------------------------------------------Last Match Result-------------------------------------*/

.result {
  color: var(--black);
  font-weight: 500;
  grid-column: 1 / -1;
  display: flex;

  font-size: 2.5rem;
}

.result__container {
  display: flex;
  align-items: center;
  background-color: var(--main-lightest);
  position: relative;
}

.result__container > * {
  padding: 1rem 1rem;
}

.result__score,
.result__vs {
  display: block;
  font-size: 3rem;
  font-weight: 500;
  padding: 1rem 2rem;
  background-color: var(--main);
  color: var(--white);
}

.result__vs {
  padding-left: 0;
  padding-right: 0;
}

.result__logo {
  height: 7rem;
  width: auto;
}

/* ------------------------------------------- Next -------------------------------------*/

.next {
  margin-top: 4rem;
  grid-column: 7 / 9;
  grid-row: 3 / 4;
  background-image: url(/img/soccer\ field\ background\ 1003.jpg);
  background-size: 100% auto;
  background-repeat: no-repeat;
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: min-content min-content max-content;
  align-content: stretch;
}

.next__left {
  display: block;
  margin-top: -4rem;
  color: var(--black);
  font-size: 2.2rem;
  font-weight: 500;
}

.next__logos {
  align-self: center;
  display: flex;
  justify-content: space-around;
}

.next__logos img {
  display: block;

  width: 28%;
  margin: 14% 0;
}

.next__teams,
.next__date {
  font-size: 2.5rem;
  text-transform: uppercase;
  color: var(--white);
  background-color: var(--main-dark-1);
  text-align: center;
}

.next__teams {
  /* margin-top: 3rem; */
  font-size: 1.7rem;
  font-weight: 600;
  align-self: end;
  /* padding-top: 1rem; */
}

/* ------------------------------------------- News -------------------------------------*/

.news {
  color: var(--black);
  background-color: var(--main-lightest);
  display: grid;
  grid-template-columns: 33% 67%;
}

.news:nth-child(1 of .news) {
  grid-column: 1 / 7;
  font-size: 2rem;
}

.news:nth-child(1 of .news) .news__title {
  grid-column: 1 / 7;
  font-size: 2.2rem;
}

.news:nth-child(1 of .news) .news__description {
  grid-column: 1 / 7;
  font-size: 2.2rem;
  padding: 2rem;
}

.news:nth-child(even) {
  grid-column: 1 / 5;
  font-size: 1.5rem;
}

.news:nth-child(odd) {
  grid-column: 5 / 9;
  font-size: 1.5rem;
}

.news: .news__foto {
  grid-column: 1 / 2;
}

.news__foto img {
  max-width: 100%;
  display: block;
  /* padding: 2rem; */
}

.news__text {
  /* padding: 2rem; */
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.news__title {
  font-size: 1.8rem;
  padding: 0.5rem;
  text-align: center;
  color: var(--white);
  background-color: var(--accent);
  font-weight: 600;
  /* text-decoration: underline 2px;
  text-underline-offset: 0.7rem; */
  /* margin-bottom: 1rem; */
}

.news__description {
  /* font-size: 1.8rem; */
  font-weight: 500;
  padding: 1.5rem;
}

/* ------------------------------------------- Tvarkara≈°tis -------------------------------------*/

.tvarkarastis {
  margin-top: 3rem;
  grid-column: 1 / -1;
  display: grid;
  grid-template-rows: 1fr 1fr 1fr 1fr 1fr 1fr;
  grid-auto-flow: column;
  grid-column-gap: 6rem;
  color: var(--black);
}

.tvarkarastis__title {
  grid-column: 1 / 3;
  text-align: center;
  letter-spacing: 1px;
  font-weight: 300;
  font-size: 3rem;
  transform: translateY(-2rem);
  /* margin-bottom: 2.5rem; */
}

.tvarkarastis__match {
  display: flex;
  font-size: 2rem;
  padding: 0 2rem;
  color: var(--black);
  font-weight: 300;
  align-items: center;

  background-color: var(--main-lightest);
}

.tvarkarastis__date {
  flex-basis: 25%;
  display: flex;
  justify-content: space-between;
  /* background-color: var(--main-lightest); */
  height: 100%;
  align-items: center;
}

.tvarkarastis__team {
  flex-basis: 37.5%;
}

.tvarkarastis__match .tvarkarastis__team:nth-last-child(2) {
  text-align: right;
  margin-right: 3rem;
}

.tvarkarastis__match--current,
.tvarkarastis__match--current ~ div {
  background-color: var(--white);
  color: var(--main-dark-1);
  font-weight: 600;
}

.tvarkarastis__match--current {
  background-color: var(--main);
  color: var(--white);
}

